<?xml version="1.0" encoding="UTF-8"?>
<document>
<simulation name="mySim" outputfolder="../../Simulations" log="EXPRESSIVE" 
			comment="this is a file for testing purposes only.">
	<general>
		<param name="timeStepSize" value="1.0" />
		<param name="endOfSimulation" value="60.0" />
	</general>
	
	<speciesLib>
	<!-- species/species library
	The species library contains all agent species in the simulations. This may
	include microbial species, plasmid and vector species, particle species etc.
	
	Species states are states that are in principal identical for all agents of
	that species. However note that iDynoMiCS 2.0 does allow you to overwrite
	states on agent level. Thus if a state is defined both on species level and 
	on agent level, the agent state will be used in the simulation.
	
	small test
	-->
		<species name="AOB">
			<state name="pigment" type="String" value="GREEN" />
			<!-- this has not been made yet, use a static growthrate for now -->
			<state name="growthRate" type="double" value="0.08" />
			<state name="stochasticMove" type="event" class="StochasticMove" package="agent.event.library." input="body" />
			<speciesModule name="coccoid" />
		</species>
		<species name="coccoid">
			<state name="coccoidCenter" type="secondary" class="CoccoidCenter" input="body" />
			<state name="morphology" type="String" value="coccoid"/>
			<state name="joints" type="secondary" class="JointsState" input="body" />
			<state name="volume" type="secondary" class="SimpleVolumeState" input="mass,density" />
			<state name="radius" type="secondary" class="CoccoidRadius" input="volume" />
			<state name="#boundingLower" type="secondary" class="LowerBoundingBox" input="body,radius" />
			<state name="#boundingSides" type="secondary" class="DimensionsBoundingBox" input="body,radius" />
			<state name="growth" type="event" package="agent.event.library." class="SimpleGrowth" input="mass,growthRate" />
			<state name="divide" type="event" package="agent.event.library." class="CoccoidDivision" input="mass,radius,body" />
			<state name="surface" type="secondary" class="SimpleSurface" input="body" />
			<state name="updateBody" type="event" package="agent.event.library." class="UpdateBody" input="body,radius,length" />
		</species>
	</speciesLib>

	<compartment name="second" shape="Rectangle">
		<sideLengths value="16.0,16.0,1.0" /> <!-- temp subject to change -->
		<agents>
			<agent>
				<state name="species" type="String" value="AOB" />
				<state name="mass" type="double" value="0.2" />
				<state name="density" type="double" value="1" />
				<state name="#isLocated" type="boolean" value="true" />
				<state name="pigment" type="String" value="RED" />
				 <!--<state name="filialLinker" type="boolean" value="true" /> -->
				<state name="body" type="body">
					<point position="12.2, 12.2" />
				</state>
			</agent>
			<agent>
				<state name="species" type="String" value="AOB" />
				<state name="mass" type="double" value="0.2" />
				<state name="density" type="double" value="1" />
				<state name="#isLocated" type="boolean" value="true" />
				<state name="pigment" type="String" value="BLUE" />
				<state name="body" type="body">
					<point position="12.0, 5.3" />
				</state>
			</agent>
			<agent>
				<state name="species" type="String" value="AOB" />
				<state name="mass" type="double" value="0.2" />
				<state name="density" type="double" value="1" />
				<state name="#isLocated" type="boolean" value="true" />
				<state name="pigment" type="String" value="GREEN" />
				<state name="body" type="body">
					<point position="5.3, 12.2" />
				</state>
			</agent>
		</agents>	
		<processManagers>
			<process name="svgWriter" class="WriteAgentsSvg" priority="2"
				firstStep="0.0" package="processManager." >
				<state name="comparmentName" type="String" value="second" />
			</process>
			<process name="agentGrowth" class="AgentGrowth" priority="0"
				firstStep="0.0" package="processManager." />	
			<process name="agentMove" class="AgentStochasticMove" priority="0"
				firstStep="0.0" package="processManager." />
			<process name="agentRelax" class="AgentRelaxation" priority="1"
				firstStep="0.0" package="processManager." />
		</processManagers>
	</compartment>
</simulation>
</document>