<?xml version="1.0" encoding="UTF-8"?>
<document>
	<simulation log="NORMAL" outputfolder="../results" name="pH_0D">
		<timer stepSize="3 [h]" endOfSimulation="10 [d]" />
		<speciesLib>
			<species name="bacterium">
				<speciesModule name="coccoid" />
				<aspect name="reactions" class="InstantiableList"> 
					<list nodeLabel="reaction" entryClass="RegularReaction">
						<reaction name="growth">
							<expression value="mass*mumax*(solute/(solute+Ks))*((oxygen/(oxygen+Kox))">
								<constant name="Ks" value="2.4[g/m+3]" /> 
								<constant name="Kox" value="0.6[g/m+3]" />
								<constant name="mumax" value="2.05[d-1]" />  
							</expression>
							<stoichiometric component="mass" coefficient="1.0" />
							<stoichiometric component="oxygen" coefficient="-18.0" />
							<stoichiometric component="solute" coefficient="-4.2" />
						</reaction> 
					</list>
				</aspect>
			</species>
			<species name="coccoid">
				<aspect name="density" class="Double" value="0.15" />
			</species>
		</speciesLib>
		<compartment name="chemostat">
			<shape class="Dimensionless" volume="1 [L]">
				<boundary  class="constantConcentrationToChemostat" volumeFlowRate="0.1 [L/h]">
					<solute name="solute" concentration="2.0 [mg/l]" />
					<solute name="oxygen" concentration="8.74 [mg/l]" />
				</boundary>
			</shape>
			<solutes>
				<solute name="solute" concentration="2.0 [mg/l]" pKa="5.0" defaultDiffusivity="2000.0 [um+2/s]" biofilmDiffusivity="1500.0 [um+2/s]" />
				<solute name="oxygen" concentration="8.74 [mg/l]" defaultDiffusivity="2000.0 [um+2/s]" biofilmDiffusivity="1500.0 [um+2/s]" />
			</solutes>
			<reactions>
			</reactions>
			<agents>
				<agent>
					<aspect name="species" class="String" value="bacterium" />
					<aspect name="mass" class="Double" value="10 [mg]" />
				</agent>
			</agents>
			<processManagers>
				<process name="solveChemostat" class="ChemostatSolver" priority="0"
					firstStep="0.0" >
					<aspect name="hMax" type="PRIMARY" class="Double" value="0.05" />
					<aspect name="solver" type="PRIMARY" class="String" value="heun" />
					<aspect name="tolerance" class="Double" value="1.0E-9" />
				</process>
				<process name="summary" class="Summary"  priority="2"
					firstStep="0.0">
					<aspect name="includeHeader" type="PRIMARY" class="Boolean" value="TRUE" />
					<aspect name="tableSpecification" type="PRIMARY" class="String"
					value="0 ~ %volume | mass ?  species == bacterium | %solute | %oxygen" />
					<aspect name="fileName" type="PRIMARY" class="String" value="data" />
				</process>
			</processManagers>
		</compartment>
	</simulation>
</document>