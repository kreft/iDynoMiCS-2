<?xml version="1.0" encoding="UTF-8"?>
<document>
	<simulation log="EXPRESSIVE" outputfolder="../results" name="pH_0D_Ammonia">
		<timer stepSize="3 [h]" endOfSimulation="10 [d]" />
		<speciesLib>
		</speciesLib>
		<compartment name="chemostat">
			<shape class="Dimensionless" volume="1 [L]">
				<boundary  class="constantConcentrationToChemostat" volumeFlowRate="0.1 [L/h]">
				<solute name="Am" 	concentration="17.031 [g/m+3]" />
				</boundary>
			</shape>
			<solutes>
				<solute name="Am" 	pKa="9.25"	maxCharge="1.0" concentration="17.031 [g/m+3]" defaultDiffusivity="1"  molarWeight="17.031 [g/mol]" />
			</solutes>
			<reactions>
			</reactions>
			<agents>
			</agents>
			<processManagers>
				<process name="solveChemostat" class="ChemostatSolver" priority="0"
					firstStep="0.0" >
					<aspect name="hMax" type="PRIMARY" class="Double" value="0.05" />
					<aspect name="solver" type="PRIMARY" class="String" value="heun" />
					<aspect name="tolerance" class="Double" value="1.0E-9" />
				</process>
			</processManagers>
		</compartment>
	</simulation>
</document>